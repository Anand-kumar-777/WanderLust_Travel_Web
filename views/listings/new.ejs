<%_ layout('layouts/boilerplate.ejs') %>
<body>
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings">
        <label>Title:</label>
        <input name="listing[title]" type="text"  placeholder="Enter Title" required>
        <br><br>
        <label>Description:</label>
        <textarea name="listing[description]" placeholder="Description" required></textarea>
        <br><br>
        <label>Price:</label>
        <input type="number" name="listing[price]" placeholder="Price" required>
        <br><br>
        <label>Location:</label>
        <input name="listing[location]" type="text" name="location" placeholder="Enter the location" required>
        <br><br>
        <label>Country:</label>
        <input type="text" name="listing[country]" placeholder="Country" required>
        <br><br>
        <button type="submit">Add</button>
    </form>
    <br><br>
    <a href="/listings"><button>Back</button></a>
</body>
</html>
